- if @client.errors.any?
  #error_explanation
    %h2= "#{pluralize(@client.errors.count, "error")} prohibited this client from being saved:"
    %ul
      - @client.errors.full_messages.each do |msg|
        %li= msg
.fields
  %div
    = f.label :given_name
    %br/
    = f.text_field :given_name
  %div
    = f.label :last_name
    %br/
    = f.text_field :last_name
  %div

.actions
  = f.submit 'Save'
